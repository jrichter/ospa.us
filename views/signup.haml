#right-content
  .header
    .title
      Subscribe to our mailing list
    .summary
      / Begin MailChimp Signup Form
      %link{href: "//cdn-images.mailchimp.com/embedcode/classic-081711.css", rel: "stylesheet", type: "text/css"}/
      #mc_embed_signup
        %form#mc-embedded-subscribe-form.validate{action: "http://ospa.us8.list-manage1.com/subscribe/post?u=e4db9f1ed9292e6578c668d88&id=6fe0c5485e", method: "post", name: "mc-embedded-subscribe-form", novalidate: "", target: "_blank"}
          .indicates-required
            %span.asterisk *
            indicates required
          .mc-field-group
            %label{for: "mce-EMAIL"}
              Email Address
              %span.asterisk *
            %input#mce-EMAIL.required.email{name: "EMAIL", type: "email", value: ""}/
          .mc-field-group
            %label{for: "mce-FNAME"} First Name
            %input#mce-FNAME{name: "FNAME", type: "text", value: ""}/
          .mc-field-group
            %label{for: "mce-LNAME"} Last Name
            %input#mce-LNAME{name: "LNAME", type: "text", value: ""}/
